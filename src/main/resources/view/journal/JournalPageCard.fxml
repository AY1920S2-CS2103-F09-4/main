<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<HBox id="entryPane" fx:id="entryPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="120" GridPane.columnIndex="0">
            <padding>
                <Insets top="10" right="5" bottom="10" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="entryDate" text="\$entryDate" styleClass="cell_big_label" />
                <Label fx:id="entryTime" text="\$entryTime" styleClass="cell_big_label" />
            </HBox>
            <Label fx:id="entryTitle" text="\$entryTitle" styleClass="cell_small_label" />
            <Label fx:id="entryLocation" text="\$entryLocation" styleClass="cell_small_label" />
            <Label fx:id="entryFeeling" text="\$entryFeeling" styleClass="cell_small_label" />
            <Label fx:id="entryWeather" text="\$entryWeather" styleClass="cell_small_label" />
        </VBox>
    </GridPane>
</HBox>
